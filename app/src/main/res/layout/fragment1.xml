<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dc9c9c"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:background="#ffffff"
        android:orientation="vertical">


        <Button
            android:id="@+id/bt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="사과 table(비어있음)" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="포도 table(비어있음)" />

        <Button
            android:id="@+id/bt3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="키위 table(비어있음)" />

        <Button
            android:id="@+id/bt4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자몽 table(비어있음)" />
    </LinearLayout>

    <LinearLayout
        android:background="#c1c1c1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <TableLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:id="@+id/tx1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="테이블명"
                    android:textSize="20dp"
                    />
                <TextView
                    android:textColor="#0000ff"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/t1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tx2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="입장시간"
                    android:textSize="20dp"
                    />
                <TextView
                    android:textColor="#0000ff"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/t2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tx3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="스파게티"
                    android:textSize="20dp"
                    />
                <TextView
                    android:textColor="#0000ff"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/t3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tx4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="피자"
                    android:textSize="20dp"
                    />
                <TextView
                    android:textColor="#0000ff"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/t4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tx5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="멤버쉽카드"
                    android:textSize="20dp"
                    />
                <TextView
                    android:textColor="#0000ff"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/t5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    />
            </TableRow>
            <TableRow
                android:background="#d0c1c1">
                <TextView
                    android:id="@+id/tx6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:textSize="20dp"
                    />
                <TextView
                    android:textColor="#0000ff"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/t6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textSize="20dp"
                    />
            </TableRow>
        </TableLayout>

    </LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

   >
    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="새 주문"
        android:layout_gravity="center_horizontal|center_vertical"/>
    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="정보수정"
        android:layout_gravity="center_vertical"/>
    <Button
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="초기화"
        android:layout_gravity="center_vertical"/>
</LinearLayout>


</LinearLayout>